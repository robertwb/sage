#!/usr/bin/env bash

unset RM

if [ "$SAGE_LOCAL" = "" ]; then
    echo "SAGE_LOCAL undefined ... exiting";
    echo "Maybe run 'sage -sh'?"
    exit 1
fi

if [ "$SAGE64" = "yes" ]; then
    CFLAGS="-m64 "; export CFLAGS
fi

cd src

echo "Testing the M4RI library"

make check

if [ $? -ne 0 ]; then
    echo "Error testing M4RI"
    exit 1
fi
