#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

rm -rf "$SAGE_LOCAL/lib/python/site-packages/IPython"

cd src

"$SAGE_ROOT"/local/bin/python setup.py install

if [ $? -ne 0 ]; then
    echo "Error installing Ipython"
    exit 1
fi
