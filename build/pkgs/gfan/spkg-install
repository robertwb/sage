#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

# gfan sets its own CFLAGS and so on internally in its makefile,
# so let's abuse GPROFFLAG since it is unused :)
if [ `uname` = "Darwin" -a "$SAGE64" = "yes" ]; then
   GPROFFLAG="-m64"; export GPROFFLAG
fi

cd src/

rm -f "$SAGE_LOCAL/bin/gfan*"

$MAKE

if [ $? -ne 0 ]; then
   echo "Error building gfan"
   exit 1
fi

if [ ! -f gfan ]; then
   echo "gfan executable not found."
   exit 1
fi

$CP gfan "$SAGE_LOCAL/bin/"

if [ ! -f "$SAGE_LOCAL/bin/gfan" ]; then
   echo "gfan executable not copied"
   exit 1
fi

cd "$SAGE_LOCAL/bin/"
rm gfan_*
./gfan installlinks

if [ ! -f "$SAGE_LOCAL/bin/gfan_buchberger" ]; then
   echo "gfan links not created correctly"
   exit 1
fi
