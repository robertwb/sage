+int sage_clique_number(graph_t *g){
+  sage_reset_global_variables();
+  find_all=FALSE;
+  only_weight=TRUE;
+  maximal=TRUE;
+  number1=FALSE;
+  clique_options *opts;
+  opts=sage_init_clique_opt();
+  int n = clique_unweighted_max_weight(g,opts);
+  free(opts);
+  opts = NULL;
+  return n;
+}
