#!/usr/bin/make -f
DEB_AUTO_UPDATE_AUTOCONF = 2.50
DEB_AUTO_UPDATE_AUTOMAKE = 1.10
DEB_AUTO_UPDATE_ACLOCAL = 1.10
DEB_AUTO_UPDATE_LIBTOOL = 1
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

CFLAGS += -fPIC
CXXFLAGS += -fPIC
DEB_CONFIGURE_EXTRA_FLAGS += --with-gmp --with-givaro --with-blas --with-ntl --enable-optimization

debian/stamp-autotools-files: fix-m4

fix-m4:
	cp -a macros m4

common-install-arch:: remove-gmp

remove-gmp: common-install-impl
	rm -rf debian/liblinbox-dev/usr/include/gmp++

clean::
	rm -f configure
