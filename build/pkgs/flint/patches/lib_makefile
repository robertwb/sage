LIBDIR=$(PREFIX)/lib
INCLUDEDIR=$(PREFIX)/include
DOCDIR=$(PREFIX)/doc

libflint.dylib: all
	$(CXX) -single_module -fPIC -dynamiclib -o libflint.dylib $(FLINTOBJ) -L$(SAGE_LOCAL)/lib -lgmp -lm

libflint.dll: all
	$(CXX) -fPIC -shared -o libflint.dll $(FLINTOBJ) -L$(SAGE_LOCAL)/lib -lgmp -lm

libflint.so: all
	$(CXX) -fPIC -shared -fPIC -o libflint.so $(FLINTOBJ) -L$(SAGE_LOCAL)/lib -lgmp -lm
