#!/usr/bin/env bash

if [ "$SAGE64" = "yes" ]; then
   echo "64 bit build"
   CFLAGS="-O2 -g -m64 -fPIC"; export CFLAGS
   CXXFLAGS="-O2 -g -m64 -fPIC"; export CXXFLAGS
   LDFLAGS="-m64 "; export LDFLAGS
else
   CXXFLAGS="$CXXFLAGS -fPIC"; export CXXFLAGS
   CFLAGS="$CFLAGS -fPIC"; export CFLAGS
fi

# remove old executable/headers/library
echo "Removing old binary, headers and static library"
rm -f "$SAGE_LOCAL"/bin/ecm
rm -f "$SAGE_LOCAL"/lib/libecm.*
rm -r "$SAGE_LOCAL"/include/ecm.h

cd src

unset RM

./configure --with-gmp=$SAGE_LOCAL  --prefix=$SAGE_LOCAL

if [ $? -ne 0 ]; then
    echo "There was a problem configuring GMP ECM."
    exit 1
fi

$MAKE

if [ $? -ne 0 ]; then
    echo "There was a problem building GMP ECM."
    exit 1
fi


$MAKE install

if [ $? -ne 0 ]; then
    echo "There was a problem installing GMP ECM (though it appears to have built fine)."
    exit 1
fi
