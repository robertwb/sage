#!sage.bin -O
# -*- coding: utf-8 -*-
"""
SAGE IPython startup script.

"""

import IPython
from IPython.CrashHandler import CrashHandler

sage = IPython.Shell.start()

sageCH = CrashHandler(sage.IP, 'SAGE', 'William Stein', \
                      'wstein@gmail.com', \
                      'http://sage.math.washington.edu/trac', \
		      'SAGE_Crash_Report.txt', \
                      show_crash_traceback=False)

sage.IP.set_crash_handler(sageCH)

sage.mainloop(banner='')