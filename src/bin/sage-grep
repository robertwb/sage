#!/bin/sh

cd $SAGE_ROOT/devel/sage/sage

grep -i "$*" *.py  2>/dev/null
grep -i "$*" */*.py 2>/dev/null
grep -i "$*" */*/*.py  2>/dev/null
grep -i "$*" */*/*/*.py  2>/dev/null
grep -i "$*" */*/*/*/*.py  2>/dev/null
grep -i "$*" */*/*/*/*/*.py  2>/dev/null
grep -i "$*" */*/*/*/*/*/*.py  2>/dev/null
grep -i "$*" */*/*/*/*/*/*/*.py  2>/dev/null
grep -i "$*" */*/*/*/*/*/*/*/*.py  2>/dev/null

grep -i "$*" *.pyx      2>/dev/null
grep -i "$*" */*.pyx    2>/dev/null
grep -i "$*" */*/*.pyx  2>/dev/null
grep -i "$*" */*/*/*.pyx   2>/dev/null
grep -i "$*" */*/*/*/*.pyx  2>/dev/null
grep -i "$*" */*/*/*/*/*.pyx   2>/dev/null
grep -i "$*" */*/*/*/*/*/*.pyx  2>/dev/null
grep -i "$*" */*/*/*/*/*/*/*.pyx   2>/dev/null
grep -i "$*" */*/*/*/*/*/*/*/*.pyx 2>/dev/null