#!/usr/bin/env sage-python

import os, sys, socket

print open(os.environ['SAGE_ROOT'] + '/local/bin/sage-banner').read()

print "Starting SAGE Web Notebook Server (version 1)..."

from sage.server.server1.server1 import server_http1

port = 8000

if len(sys.argv) > 1:
    server_http1(sys.argv[1], port=port)
else:
    server_http1(port=port)
